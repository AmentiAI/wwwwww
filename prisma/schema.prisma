// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Domain {
  id        String   @id @default(cuid())
  url       String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  contacted Boolean  @default(false)
  emails    Email[]
  analysis  WebsiteAnalysis?
}

model Email {
  id        String   @id @default(cuid())
  address   String   @unique
  domainId  String
  domain    Domain   @relation(fields: [domainId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  contacted Boolean  @default(false)
}

model WebsiteAnalysis {
  id                String   @id @default(cuid())
  domainId          String   @unique
  domain            Domain   @relation(fields: [domainId], references: [id])
  title             String?
  description       String?
  keywords          String[] // Array of keywords
  socialMedia       Json     // Store social media links as JSON
  contactInfo       Json     // Store contact info as JSON
  technicalInfo     Json     // Store technical analysis as JSON
  contentAnalysis   Json     // Store content analysis as JSON
  seoAnalysis       Json     // Store SEO analysis as JSON
  recommendations   String[] // Array of recommendations
  priorityFixes     String[] // Array of priority fixes
  analysisDate      DateTime @default(now())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
